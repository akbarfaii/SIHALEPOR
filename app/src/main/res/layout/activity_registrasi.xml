<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registrasi">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary2"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:translationZ="6dp">
        <ImageView
            android:id="@+id/icn_kembali"
            android:layout_width="30dp"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/back"
            android:contentDescription="todo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PraTul"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrasi"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:background="@drawable/pet1r"
                android:layout_gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/user_enginer"
                app:boxStrokeColor="#00000000">
                <EditText
                    android:id="@+id/et_petugas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="Petugas"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_email"
                app:boxStrokeColor="#00000000">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="e_mail"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:autofillHints="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleContentDescription="password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTintMode="multiply"
                app:startIconDrawable="@drawable/ic_lock"
                app:boxStrokeColor="#00000000">
                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableStart="@drawable/ic_lock"
                    android:hint="password"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:autofillHints="password" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_phone_iphone"
                app:boxStrokeColor="#00000000">

                <EditText
                    android:id="@+id/et_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="Handphone"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:autofillHints="creditCardNumber" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/city1"
                app:boxStrokeColor="#00000000">
                <EditText
                    android:id="@+id/et_pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="masukkan perusahaan"
                    android:inputType="text"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:autofillHints="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/unit"
                app:boxStrokeColor="#00000000">

                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="masukkan unit pelayanan"
                    android:inputType="text"
                    android:textColor="#000000"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:autofillHints="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorPrimary2"
                android:text="SIMPAN"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>